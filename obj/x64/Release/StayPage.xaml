<Page
    x:Class="Best_Of_Beijing.StayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Best_Of_Beijing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" Height="989"  Width="320" 
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Visible"
                      Margin="5" Background="{ThemeResource SystemControlBaseLowAcrylicElementBrush}">
            <StackPanel Height="1830" Orientation="Vertical">
                <Border Height="auto" Width="290" BorderBrush="blue" BorderThickness="1" Margin="0,15,0,0">
                    <Image Source="/Assets/waldorf.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="290"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                    <Button x:ConnectionId='7' Width="140" Height="35" Content="Waldorf Astoria"                       />

                </StackPanel>
                <Border Height="auto" Width="290" BorderBrush="blue" BorderThickness="1" Margin="0,15,0,0">
                    <Image Source="/Assets/world.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="290"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                    <Button x:ConnectionId='6' Width="140" Height="35" Content="New World"                       />

                </StackPanel>
                <Border Height="auto" Width="290" BorderBrush="blue" BorderThickness="1" Margin="0,15,0,0">
                    <Image Source="/Assets/legendale.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="290"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                    <Button x:ConnectionId='5' Width="140" Height="35" Content="Legendale"                       />

                </StackPanel>
                <Border Height="auto" Width="290" BorderBrush="blue" BorderThickness="1" Margin="0,15,0,0">
                    <Image Source="/Assets/nuo.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="290"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                    <Button x:ConnectionId='4' Width="140" Height="35" Content="NUO"                       />

                    <TextBlock HorizontalAlignment="Right" Width="120" Height="35" Text="$$$"  Margin="10,0,0,0"/>
                </StackPanel>
                <Border Height="auto" Width="290" BorderBrush="blue" BorderThickness="1" Margin="0,15,0,0">
                    <Image Source="/Assets/image.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="290"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                    <Button x:ConnectionId='3' Width="140" Height="35" Content="Wangfujing"                       />

                </StackPanel>
                <Border Height="auto" Width="290" BorderBrush="blue" BorderThickness="1" Margin="0,15,0,0">
                    <Image Source="/Assets/image.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="290"/>
                </Border>
                <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Center">
                    <Button x:ConnectionId='2' Width="140" Height="35" Content="Regent"                       />

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <WebView x:ConnectionId='1' x:Name="webView1" 
                 HorizontalAlignment="Center" Height="989" Margin="325,5,5,5" 
                 VerticalAlignment="Top" Width="1175" 
                                                       
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>
    </Grid>
</Page>

