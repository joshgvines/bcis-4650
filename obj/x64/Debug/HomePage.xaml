<Page
    x:Class="Best_Of_Beijing.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Best_Of_Beijing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <StackPanel Height="700" Width="900" Background="{ThemeResource SystemControlBaseLowAcrylicElementBrush}">

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="50" HorizontalAlignment="Center">
                <StackPanel  Width="823" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Text="Best of Beijing" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>

                </StackPanel>

                <WebView x:ConnectionId='1' x:Name="webView" Height="500" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" DefaultBackgroundColor="DimGray"/>


                <StackPanel Orientation="Vertical" Width="823" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock TextWrapping="WrapWholeWords" HorizontalAlignment="Center" Margin="5">
                        <Span xml:space="preserve"><Run>Watch in youtube: </Run><Hyperlink NavigateUri="https://www.youtube.com/watch?v=Iu6xR1BZi3s">youtube.com</Hyperlink></Span>
                        
                    </TextBlock>
                    <Button x:ConnectionId='2' Width="auto" Height="auto" Content="Notification" HorizontalAlignment="Center"                     ></Button>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

