<Page
    x:Class="Best_Of_Beijing.EatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Best_Of_Beijing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Height="auto" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" BorderBrush="Blue" BorderThickness="1"
                    Margin="10" Background="{ThemeResource SystemControlBaseLowAcrylicElementBrush}">
                <!-- images are 1020 / 650 all labeled for reuse -->

                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <Border Height="auto" Width="auto" BorderBrush="blue" BorderThickness="1">
                        <Image Source="/Assets/siji2.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Center" Width="240"/>
                    </Border>
                <Button x:ConnectionId='12' Width="150" Height="35" Content="Siji Minfu"                       HorizontalAlignment="Center" Margin="10"/>

            </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <Border Height="auto" Width="auto" BorderBrush="blue" BorderThickness="1">
                        <Image Source="/Assets/pekduck.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="240"/>
                    </Border>
                <Button x:ConnectionId='11' Width="150" Height="35" Content="Peking Duck"                       HorizontalAlignment="Center" Margin="10"/>

            </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <Border Height="auto" Width="auto" BorderBrush="blue" BorderThickness="1">
                        <Image Source="/Assets/da.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="240"/>
                    </Border>
                <Button x:ConnectionId='10' Width="150" Height="35" Content="Beijing Da Dong"                       HorizontalAlignment="Center" Margin="10"/>

            </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <Border Height="auto" Width="auto" BorderBrush="blue" BorderThickness="1">
                        <Image Source="/Assets/shi.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="240"/>
                    </Border>
                <Button x:ConnectionId='9' Width="150" Height="35" Content="Mr.Shi's Dumplings"                       HorizontalAlignment="Center" Margin="10"/>

            </StackPanel>

                <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
                    <Border Height="auto" Width="auto" BorderBrush="blue" BorderThickness="1">
                        <Image Source="/Assets/huang.jpg" HorizontalAlignment="Center" Height="auto" VerticalAlignment="Top" Width="240"/>
                    </Border>
                <Button x:ConnectionId='8' Width="150" Height="35" Content="Huang Ting"                       HorizontalAlignment="Center" Margin="10"/>

            </StackPanel>

        </StackPanel>


        <Grid x:ConnectionId='1' x:Name="pageGrid" Width="auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,265,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="auto" Height="auto" Margin="2">
                <Button x:ConnectionId='4' Width="105" x:Name="btnBeijing" Content="Beijing" Background="DimGray" Foreground="White" Margin="2,2,2,35"                         />
                <Button x:ConnectionId='5' Width="105" x:Name="btnAerial" Content="Aerial" Background="DarkGray" Foreground="White" Margin="2"                        />
                <Button x:ConnectionId='6' Width="105" x:Name="btnAerialRoad" Content="Roads/Aerial" Background="DarkGray" Foreground="White" Margin="2"                            />
                <Button x:ConnectionId='7' Width="105" x:Name="btnDefault" Content="Roads" Background="DarkGray" Foreground="White" Margin="2"                         />
            </StackPanel>

            <Maps:MapControl x:ConnectionId='2' x:Name="MapControl1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                             MapServiceToken="4ctaaqyO9qUbYbK638xM~TSqMBQz8BkrPhKN0QNOreg~Ap88he34h_S6hOn8_I-5qc0IQzF2N79oaVpMDnFniLAWuN4cmRBPYyEkcv9dT5gP"/>

            <StackPanel BorderBrush="Blue" BorderThickness="1"  Grid.Column="3" Orientation="Vertical" Background="{ThemeResource SystemControlBaseLowAcrylicElementBrush}"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="auto" Height="auto">
                <TextBlock x:ConnectionId='3' Name="info" Width="auto" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" Margin="10"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>

